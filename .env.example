# -----------------------
# Server Configuration
# -----------------------
PORT=6000
NODE_ENV=development

# -----------------------
# Database
# -----------------------
MONGO_URI=your_mongo_connection_string

# -----------------------
# JWT Tokens
# -----------------------
ACCESS_SECRET=your_access_token_secret
REFRESH_SECRET=your_refresh_token_secret
TOKEN_ISSUER=jobportal
VERIFY_TOKEN_EXPIRES_MIN=60
RESEND_VERIFY_MINUTES=5

# -----------------------
# Bcrypt
# -----------------------
BCRYPT_ROUNDS=12

# -----------------------
# File Upload Limits
# -----------------------
MAX_UPLOAD_SIZE_BYTES=2000000
MAX_AVATAR_BYTES=500000
MAX_RESUME_SIZE_BYTES=5000000
MAX_AVATAR_SIZE_BYTES=2000000
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# -----------------------
# Cloudinary Credentials
# -----------------------
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# -----------------------
# Email (SMTP)
# -----------------------
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass
FROM_NAME=jobportal
FROM_EMAIL=no-reply@jobportal.com


FRONTEND_URL=http://localhost:3000
